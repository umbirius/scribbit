<div>

<h3> Hi <%= @user.username%></h3>
<div>
    <% @posts.each do |p| %> 
        <ul>
            <h4><%= p.name %></h4>
            <iframe width="560" height="315" 
                src="<%= p.link %>" frameborder="0" 
                allow="accelerometer; 
                autoplay; 
                encrypted-media; 
                gyroscope; 
                picture-in-picture" 
                allowfullscreen>
            </iframe>
            <p><%= p.description %></p>
        </ul>
    <% end %>
</div>
<% if current_user.admin %>
    <%= link_to "Add Post", new_post_path %>
<% end %>
</div>
<%= form_for @sett, url: @url, html: { method: :patch } do |f| %> 
    <% if !params[:project_id] %>
        <%= f.label :project %> 
        <%= f.collection_select :project, current_user.projects.order(:title), :title, :title, :selected => @sett.project.title %><br>
    <% end %> 
    <%= f.label :name %> 
    <%= f.text_field :name %><br>
    <%= f.label :location %> 
    <%= f.text_field :location%><br>
    <%= f.label :description %> 
    <%= f.text_area :description %><br>
    <%= f.submit %>
<% end %>

<% if params[:project_id] %>
    <%= button_to "Delete Setting", project_sett_path(params[:id], @sett), method: :delete %>
    <%= link_to 'Back to Settings', project_setts_path(params[:project_id]) %><br>
<% else %> 
    <%= button_to "Delete Setting", sett_path(@sett), method: :delete %>
    <%= link_to 'Back to Settings', setts_path %><br>
<% end %> 
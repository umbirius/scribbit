
<% if params[:project_id] %>
<h1> <%=Project.find(params[:project_id]).title %>: Scenes </h1> 
    <% @scenes.each do |c| %> 
        <table>
            <tr>
                <th>Order</th>
                <th>Title</th>
                <th> </th>
                <th> </th>               
            </tr>
            <tr>
                <td><%= c.order %></td>
                <td><%= link_to c.title, project_scene_path(c.project,c) %></td>
                <td><%= link_to 'Edit Scene', edit_project_scene_path(params[:project_id], c)%></td>
                <td><%= button_to "Delete Scene", project_scene_path(params[:project_id], c), method: :delete %></td>
            </tr>
        <table>
    <% end %> 

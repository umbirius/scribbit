<% else %>
    <% @scenes.each do |c| %> 
        <table>
            <tr>
                <th>Project<th>
                <th>Order</th>
                <th>Title</th>
                <th> </th>
                <th> </th>               
            </tr>
            <tr>
                <td><%= link_to c.project.title, project_path(c.project) %></td>
                <td><%= c.order %></td>
                <td><%= link_to c.title, scene_path(c) %></td>
                <td><%= link_to 'Edit Scene', edit_scene_path(c)%></td>
                <td><%= button_to "Delete Scene", scene_path(c), method: :delete %></td>
            </tr>
        <table>
<% end %> 

<%= form_for @scene, url: @url, html: { method: :patch } do |f| %> 
    <% if !params[:project_id] %>
        <%= f.label :project %> 
        <%= f.collection_select :project, current_user.projects.order(:title), :title, :title, :selected => @scene.project.title %><br>
    <% end %> 
    <%= f.label :title %> 
    <%= f.text_field :title %><br> 
    <%= f.label :description %> 
    <%= f.text_field :description %><br>
    <%= f.label :order %> 
    <%= f.text_field :order%><br>
    <%= f.submit %>
<% end %>

<% if params[:project_id] %> 
    <%= button_to "Delete Scene", project_scene_path(params[:project_id], @scene), method: :delete %>
    <%= link_to 'Back to Scenes', project_scenes_path(params[:project_id])%><br>
<% else %> 
    <%= button_to "Delete Scene", scene_path(@scene), method: :delete %>
    <%= link_to 'Back to Scenes', scenes_path %><br>
<% end %> 
